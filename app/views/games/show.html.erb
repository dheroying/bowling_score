<div class='card-success'><h1 class="text-success text-center">Bowling Score Board</h1></div>
<% if session[:strike] %>
    <div class='card-text'>
      <%= image_tag('strike.png', width: '300px', height: '250px') %>
    </div>
  <% elsif session[:spare] %>
    <div class='card-text'>
      <%= image_tag('spare.png', width: '300px', height: '250px') %>
    </div>
  <% elsif session[:game_over] %>
    <div class='card-text'>
      <%= image_tag('game_over.png', width: '100%', height: '250px') %>
    </div>
<% end %>

<%= render partial: 'new_shot' unless session[:game_over] %>
<%= render partial: 'score_table' %>

<%= link_to 'Game List', games_path, class: "btn btn-danger float-right" %>
