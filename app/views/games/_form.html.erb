<%= form_for(game) do |f|%>
  <div class="field form-group mt-4">
    <%= f.label :players, class: 'sr-only' %>
    <%= f.number_field :players , class: 'form-control', placeholder: 'Enter number of players' %>
  </div>

  <div class="actions form-group float-right">
    <%= f.submit "Start", class: 'btn btn-success' %>
  </div>
<% end %>
